@model IEnumerable<ApplicationUser>
 
    @*todo: add pagination*@
<h2>User list</h2>
<table class="table">
    <ul class="list-group">
        @foreach (var user in Model)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                @user.Email
                <div class="">
                    <a class="btn btn-sm btn-primary" asp-controller="Recipes" asp-action="User" asp-route-userId="@user.Id">Recipe list</a>
                    <a class="btn btn-sm btn-primary" asp-controller="Users" asp-action="EditRoles" asp-route-userId="@user.Id">Access rights</a>
                    <a class="btn btn-sm btn-danger" asp-controller="Users" asp-action="Delete" asp-route-userId="@user.Id">X</a>
                </div>
            </li>
        }
    </ul>
</table>